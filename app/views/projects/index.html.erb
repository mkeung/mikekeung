<% provide(:title, "What I'm working on") %>

<% if admin_signed_in? %>
  <div class="row">
    <%= form_for(@new_project) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :learning %>
      <%= f.text_area :learning %>

      <%= f.label :github %>
      <%= f.text_field :github %>

      <%= f.submit "add project", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>


<div class="row">
  <% @projects.each do |project| %>
    <%= render project %>
  <% end %>
</div>