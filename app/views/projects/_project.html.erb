<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title"><%= project.title %><% if project.completed %>&nbsp;&nbsp;&nbsp;<span class="badge">completed</span><% end %></h3>
	</div>

	<div class="panel-body">
		<h5><b>Description:</b></h5>
    	<%= raw(project.description.gsub(/\n/, '<br/>')) %>
    	<h5><b>Learnings:</b></h4>
    	<%= raw(project.learning.gsub(/\n/, '<br/>')) %>
    	<% unless project.external_link.empty? %>
    		<p><%= link_to content_tag(:i, '', class: 'fa fa-external-link') + ' ' + project.external_link, project.external_link %></p>
    	<% end %>
    	<% unless project.github.empty? %>
    		<p><%= link_to content_tag(:i, '', class: 'fa fa-github-alt') + ' ' + project.github, project.github %></p>
    	<% end %>
	</div>

	<% if admin_signed_in? %>
	<div class="panel-footer">
		<%= link_to content_tag(:i, '', class: 'fa fa-edit')+' update', edit_project_path(project) %>
		<%= link_to content_tag(:i, '', class: 'fa fa-trash-o')+" delete", project, method: :delete, data: { confirm: "Are you sure you want to delete this project?" }, title: project.title %>
	</div>
	<% end %>
</div>