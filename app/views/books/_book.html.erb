<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title"><%= book.title %> (<%= book.author %>)<% if book.completed %>&nbsp;&nbsp;&nbsp;<span class="badge">completed</span><% end %></h3>
	</div>

	<div class="panel-body">
		<div class="row">
			<div class="col-md-12">
				<h5><b>Review:</b></h5>
		    	<%= raw(book.review.gsub(/\n/, '<br/>')) %>
    		</div>
    	</div>
	</div>

	<% if admin_signed_in? %>
	<div class="panel-footer">
		<%= link_to content_tag(:i, '', class: 'fa fa-edit')+' update', edit_book_path(book) %>
		<%= link_to content_tag(:i, '', class: 'fa fa-trash-o')+" delete", book, method: :delete, data: { confirm: "Are you sure you want to delete this book?" }, title: book.title %>
	</div>
	<% end %>
</div>